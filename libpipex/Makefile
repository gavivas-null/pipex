NAME = libpipex.a

AR = ar
ARFLAG = -rcs
CC = cc
CFLAGS = -Wall -Wextra -Werror
INCLUDES = -I ../pipex -I ../Libft


SRCS =	pipex_core.c \
		pipex_errors.c \
		pipex_handle.c \
		pipex_io.c \
		pipex_path.c \
		pipex_pipeline.c \

OBJS = $(SRCS:.c=.o)

# --------------------------------------------------------------
# ðŸ‘‡ Regla principal
# --------------------------------------------------------------
all: $(NAME)

$(NAME): $(OBJS)
	@$(AR) $(ARFLAG) $(NAME) $(OBJS)
	@echo "ðŸ“¦ LibrerÃ­a creada: $(NAME)"

# --------------------------------------------------------------
# ðŸ›  Compilar cada archivo fuente
# --------------------------------------------------------------
%.o: %.c
	@$(CC) $(CFLAGS) $(INCLUDES) -c $< -o $@
	@echo "ðŸ”§ Compilado: $<"

# --------------------------------------------------------------
# ðŸ§¹ Limpieza
# --------------------------------------------------------------
clean:
	@rm -f $(OBJS)
	@echo "ðŸ§¹ pipex: objetos eliminados."

fclean: clean
	@rm -f $(NAME)
	@echo "ðŸ—‘ï¸ pipex: lib eliminada."

re: fclean all

.PHONY: all clean fclean re